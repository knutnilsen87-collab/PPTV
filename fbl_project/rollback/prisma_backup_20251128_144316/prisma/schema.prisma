generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String?  @unique
  emailVerified  DateTime?
  image          String?

  accounts       Account[]
  sessions       Session[]
  videos         Video[]
  votes          Vote[]
  role             Role   @default(USER)
  displayName      String?
  avatarUrl        String?
  country          String?
  bio              String?
  favoriteVariant  String?
}
